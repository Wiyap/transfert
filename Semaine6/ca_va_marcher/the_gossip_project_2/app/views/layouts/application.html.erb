<!DOCTYPE html>
<html>
  <head>
    <title>TheGossipProject2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-primary">
      <%= link_to "The Gossip Project" , root_path, class:"navbar-brand text-white"%> 
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Home" , gossips_path, class:"nav-link"%> 
          </li>
          <li class="nav-item">
            <%= link_to "Team" , team_path, class:"nav-link"%> 
          </li>
          <li class="nav-item">
            <%= link_to "Contact" ,contact_path, class:"nav-link"%> 
          </li>
          <% if logged_in?() %>
          <li class="nav-item">
            <%= link_to "Nouveau Gossip", new_gossip_path, class:"btn btn-outline-light" %>
          </li>
          <% end %>
        </ul>
      </div>
      <% if logged_in?() %>
        <%= link_to "Log out", sessions_path, method: :delete, class:"btn btn-outline-danger" %> 
      <% else %>
        <%= link_to "Log in", new_session_path, class:"btn btn-outline-light" %> 
      <% end %>
    </nav>
    <% flash.each do |type,msg|%>
      <div class="alert alert-<%= type %>"> <%= msg %> </div>
    <% end %>
    <%= yield %>
  </body>
</html>
